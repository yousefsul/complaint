<p id="notice"><%= notice %></p>

<h1>My Complains</h1>

<table id = "complains">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @complains.each do |complain| %>
    <% if can? :manage, complain %>
  <tr>
        <td><%= complain.title %></td>
        <td><%= complain.body %></td>
        <td><%= complain.status %></td>
        <td><%= complain.user.email %></td>
        <td><%= link_to 'Show', complain %></td>
        <td><%= link_to 'Edit', edit_complain_path(complain) %></td>
        <td><%= link_to 'Destroy', complain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
    <% end %>
  </tbody>
</table>

<br>

