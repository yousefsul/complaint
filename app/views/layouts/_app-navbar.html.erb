<!--
Application navigation bar if the user logged in show logout
and if not show signup and login links
styled from application css
-->
<div class="app-navbar">
  <nav>
    <ul>
      <li class="left-nav" style="margin-left: 45%; font-weight: bold; font-size:30px;">
        CRC
      </li>
      <% if logged_in? %>
        <li class="right-nav">
          <%= link_to "logout", logout_url %>
        </li>
      <% else %>
        <li class="right-nav">
          <%= link_to "Login", '/login', method: :get %>
        </li>
        <li class="right-nav">
          <%= link_to "SignUp", '/users/new', method: :get %>
        </li>
        </ul>
      <% end %>
      </nav>
</div>