<!--
Application navigation bar if the user logged in show logout
and if not show signup and login links
styled from application css
-->
<nav class="navbar">
  <ul>

    <% if current_user %>

      <li class="nav-right">
        <%= link_to 'Logout', logout_path ,method: :delete %>
      </li>


    <% else %>

      <li class="nav-right">
        <%= link_to 'Login', login_path %>
      </li>

    <% end %>

  </ul>
</nav>